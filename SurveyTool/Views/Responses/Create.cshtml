@model SurveyTool.Models.Survey

@{
    ViewBag.Title = Model.Name;
}

@section Scripts
{
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({ format: 'mm/dd/yyyy' });

            $(document).on('click', 'a[data-toggle=comment]', function () {
                var id = $(this).attr('href');
                $(id).toggle();
                return false;
            });
        });
    </script>
}

<div class="page-header">
    <h3>@ViewBag.Title</h3>
</div>

<form action="@Url.Action("Create", "Responses", new {surveyId = Request["surveyId"]})" method="post">
    <div class="well well-small">
        <h4>Pytania</h4>
    </div>
    <ul class="unstyled bordered skip-first">
        @foreach (var question in Model.Questions)
        {
            <li class="row">
                <div class="span9">
                    <input type="hidden" name="Answers.Index" value="@question.Id" />
                    <input type="hidden" name="Answers[@question.Id].QuestionId" value="@question.Id" />

                    @Html.Raw(question.Body)
                </div>
                <div class="span3">
                    @if (question.Type == "ABCD")
                    {
                        // todo zmienic potem
                        <label class="radio-inline" for="A">
                            A <label>@question.SplitQues[0]</label>
                            <input type="radio" name="Answers[@question.Id].Value" value="A">
                        </label>
                        <label class="radio-inline" for="B">
                            B <label>@question.SplitQues[1]</label>
                            <input type="radio" name="Answers[@question.Id].Value" value="B">
                        </label>
                        <label class="radio-inline" for="C">
                            C <label>@question.SplitQues[2]</label>
                            <input type="radio" name="Answers[@question.Id].Value" value="C">
                        </label>
                        <label class="radio-inline" for="D">
                            D <label>@question.SplitQues[3]</label>
                            <input type="radio" name="Answers[@question.Id].Value" value="D">
                        </label>


                    }
                    @if (question.Type == "Text")
                    {
                        <input class="span3" type="text" name="Answers[@question.Id].Value" placeholder="Wpisz odpowiedz" />
                    }
                    @if (question.Type == "Yes/No")
                    {

                        <label class="radio-inline" for="Yes">
                            Tak
                            <input type="radio" name="Answers[@question.Id].Value" value="Yes">
                        </label>

                        <label class="radio-inline" for="No">
                            Nie
                            <input type="radio" name="Answers[@question.Id].Value" value="No">
                        </label>
                    }
                    @if (question.Type == "Number")
                    {
                        <input class="span3" type="text" name="Answers[@question.Id].Value" placeholder="Wpisz numer" />
                    }
                    @*<textarea id="@("comment" + question.Id)" class="span3 hide" name="Answers[@question.Id].Comment" placeholder="Comments..."></textarea>
                        <a href="@("#comment" + @question.Id)" data-toggle="comment"><small>Show/Hide Comment</small></a>*@
                </div>
            </li>
        }
    </ul>

    <div class="form-actions">
        @*<button class="btn btn-inverse pull-right" name="action" value="Next">
            Zapisz i idz do następnej ankiety        </button>*@
        <button class="btn btn-primary " name="action" value="Next">
            Zapisz
        </button>
        <a class="btn" href="@Url.Action("Index", "Home")">Anuluj</a>
    </div>
</form>